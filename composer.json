{
    "name": "navarr/hugger",
    "description": "PSR-8 Implementation",
    "type": "library",
    "require": {
        "psr/hug": "^1",
        "php": ">=8"
    },
    "provide": {
        "psr/hug-implementation": "1.0-dev"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1",
        "infection/infection": "^0.24.0",
        "squizlabs/php_codesniffer": "^3.6",
        "roave/security-advisories": "dev-master",
        "navarr/fig-hug-interfaces": "1.0.x-dev"
    },
    "autoload": {
        "psr-4": {
            "Navarr\\Hugger\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Navarr\\Hugger\\Test\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Navarr Barnier",
            "email": "me@navarr.me"
        }
    ],
    "archive": {
        "exclude": [
            ".composer/",
            ".github/",
            ".idea/",
            "tests/",
            ".env",
            ".gitignore",
            ".phpunit.result.cache",
            "composer.lock",
            "infection.json.dist",
            "phpcs.xml.dist",
            "phpstan.neon",
            "phpunit.xml.dist"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    }
}
